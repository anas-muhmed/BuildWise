generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// Existing models (keep your current models here)

// Student Task State - Source of truth for Student Mode
model StudentTaskState {
  id               String   @id @default(uuid())
  userId           String
  projectId        String

  currentTaskIndex Int      @default(0)
  completedCount   Int      @default(0)
  confusedCount    Int      @default(0)

  skillLevel       SkillLevel @default(BEGINNER)
  isObserver       Boolean  @default(false)
  observerTaskId   Int?

  editorUnlocked   Boolean  @default(false)

  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())

  @@unique([userId, projectId])
  @@map("student_task_states")
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
}
